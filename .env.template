# LIFE COMMAND - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend Server Configuration (for custom Express.js backend)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=your_postgres_connection_string

# Security Configuration
REACT_APP_LOG_ENDPOINT=https://your-domain.com/api/logs
REACT_APP_ENVIRONMENT=development

# Optional: Custom Backend URL (if using the Express.js backend instead of direct Supabase)
REACT_APP_API_BASE_URL=http://localhost:3001

# Development Settings
NODE_ENV=development
PORT=3000

# SECURITY NOTES:
# 1. Never commit this file with real values to version control
# 2. Use different keys for development and production
# 3. The SERVICE_ROLE_KEY should only be used on the server side
# 4. Rotate keys regularly
# 5. Monitor access logs for unusual activity
